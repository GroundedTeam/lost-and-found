{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
{% endblock stylesheets %}

{% set title = 'Found items' %}

{% block title %}{{ title }} | {{ parent() }}{% endblock title %}

{% block content %}
    <h1>{{ 'found-items.header' | trans({}, 'main-page')}}</h1>

    <div class="nav-list-panel">
        <div class="btn-group pull-left" data-toggle="buttons">
            {% for category in categories %}
                <label class="btn btn-primary">
                    <input id="category_{{ category.title }}" data-category-id="{{ category.id }}" type="checkbox" autocomplete="off" />{{ category.title }}
                </label>
            {% endfor %}
        </div>

        <div class="pull-right">
            <a href="{{ path('add_found_item') }}" class="btn btn-success" title="Add an item you've found">
                {{ 'found-items.found-button' | trans({}, 'main-page')}}
            </a>
        </div>
    </div>

    <div class="pull-left">
        <ul id="items"></ul>
    </div>

    <div class="clearfix"></div>

    <div id="map" style="width: auto; height: 800px"></div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}

    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script src="{{ asset('js/found_list.js') }}"></script>
{% endblock javascripts %}
