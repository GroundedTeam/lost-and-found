{% extends 'base.html.twig' %}

{% block title %}
    Edit item |
    {{ parent() }}
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('lib/leaflet-draw/leaflet.draw.css') }}" />
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}

    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script src="{{ asset('lib/leaflet-draw/leaflet.draw.js') }}"></script>
    <script src="{{ asset('js/map_item_edit.js') }}"></script>
{% endblock javascripts %}

{% block content %}
    <div>
        {{ form_start(form) }}
        <div class="half-form">
            {{ form_errors(form) }}

            <div class="half-category">
                {{ form_row(form.category) }}
            </div>
            <div class="half-date">
                {{ form_row(form.date) }}
            </div>
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {#{{ form_row(form.photos) }}#}
        </div>
        <div class="map-block">
            <label for="map">Map</label>
            <div id="map"></div>
        </div>
        {{ form_end(form) }}
    </div>


    <div id="latitude" data-latitude="{{ item.latitude }}"></div>
    <div id="longitude" data-longitude="{{ item.longitude }}"></div>
    <div id="area" data-area="{{ item.area|json_encode }}"></div>
    <div id="areaType" data-area-type="{{ item.areaType }}"></div>
{% endblock content %}
