    <h1>{{ 'index.header' | trans({}, 'main-page')}}</h1>
    <div>

        <div class="well">
            {{ 'index.description' | trans({}, 'main-page')}}
        </div>

        <div>
            <a href="{{ path('add_lost_item') }}" class="btn btn-danger" title="Add an item you've lost">{{ 'index.lost-button' | trans({}, 'main-page')}}</a>
            &nbsp;
            <a href="{{ path('add_found_item') }}" class="btn btn-success" title="Add an item you've found">{{ 'index.found-button' | trans({}, 'main-page')}}</a>
        </div>

        {#<div>#}
