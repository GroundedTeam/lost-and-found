{% extends 'base.html.twig' %}

{% set title = 'F.A.Q.' %}

{% block title %}{{ title }} | {{ parent() }}{% endblock title %}

{% block content %}
    <h1>F.A.Q.</h1>
    <div>
        <dl>
            {% autoescape %}
                {% for item in faq %}
                    <dt>{{ item.question }}</dt>
                    <dd>{{ item.answer|raw }}</dd><br>
                {% endfor %}
            {% endautoescape %}
        </dl>
    </div>
{% endblock content %}
